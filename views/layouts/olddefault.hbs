  <footer>
      <div class="container">
          <div class="row">
              <div class="col-2">
                  <img src="/public/images/logo-1.svg"/ class="logo">
              </div>
          </div>
          <div class="row">
              <div class="col-10">
                  <p>The revolution will not be incorporated</p>
              </div>
          </div>
      </div>
  </footer>

  <script type="text/javascript">
    $(window).on("scroll", function() {
      if($(window).scrollTop() > 50) {
        $("header").addClass("active")
      } else {
        $("header").removeClass("active")
      }
    });
  </script>

